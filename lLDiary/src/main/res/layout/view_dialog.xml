<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:gravity="center" 
        android:background="@drawable/bg_item_ann"/>

    <EditText
        android:id="@+id/et_modify1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_title" />

    <EditText
        android:id="@+id/et_modify2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/et_modify1"
        android:hint="@string/input_new_userpwd"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_modify3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/et_modify2"
        android:hint="@string/input_confirm_userpwd"
        android:visibility="gone" />

    <LinearLayout
        style="@style/baseStyle"
        android:layout_below="@id/et_modify3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_content"
            android:layout_margin="5dp"
            android:text="确认" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
             android:background="@drawable/bg_edit_content"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>