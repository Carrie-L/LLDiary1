<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plan_item_height">

    <ImageView
        android:id="@+id/iv_item_plan_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/tv_item_plan_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/plan_item_height"
        android:layout_toRightOf="@id/iv_item_plan_icon"
        android:gravity="center_vertical"
        android:text="11:20"
       />

    <View
        android:id="@+id/view_vertical_line"
        android:layout_width="0.1dp"
        android:layout_height="@dimen/plan_item_height"
        android:background="@color/main_light_gray"
        android:layout_toRightOf="@id/tv_item_plan_time"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:id="@+id/iv_item_plan_state"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_toRightOf="@id/tv_item_plan_time"
        android:background="@drawable/node_circle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        />

        <TextView
            android:id="@+id/tv_item_plan_content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/plan_item_height"
            android:layout_marginRight="16dp"
            android:text="吃中饭"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_item_plan_state"
            android:layout_marginLeft="16dp"
            />

        <View
            android:id="@+id/view_horizontal_line"
            android:layout_alignParentBottom="true"
            style="@style/horizontal_line_style"
            android:layout_toRightOf="@id/view_vertical_line"
            android:layout_marginLeft="12dp"
            />



</RelativeLayout>


