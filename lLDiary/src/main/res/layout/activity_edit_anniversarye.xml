<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.carrie.lldiary.view.EditTextView
            android:id="@+id/etv_ann_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <com.carrie.lldiary.view.EditTextView
            android:id="@+id/etv_ann_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etv_ann_content" />

        <com.carrie.lldiary.view.EditTextView
            android:id="@+id/etv_ann_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etv_ann_person" />

        <com.carrie.lldiary.view.EditTextView
            android:id="@+id/etv_ann_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etv_ann_relationship" />

        <TextView
            android:id="@+id/tv_cal_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etv_ann_date"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ann_remind_calendar"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_cal_remind"
            android:layout_marginEnd="16dp"
            android:checked="true" />


        <com.carrie.lldiary.view.EditTextView
            android:id="@+id/etv_ann_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cal_remind" />

    </RelativeLayout>

</ScrollView>