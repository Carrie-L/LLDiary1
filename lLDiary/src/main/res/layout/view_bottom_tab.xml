<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FaceRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <RadioGroup
        android:id="@+id/rg_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/pink"
        android:orientation="horizontal" >
        
        <RadioButton
            android:id="@+id/rb_0"
            style="@style/tab_bar_style"
            android:background="@drawable/tab_menu_bg" />

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/tab_bar_style"
            android:background="@drawable/tab_menu_emoji" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/tab_bar_style"
            android:background="@drawable/tab_menu_emoticon" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/tab_bar_style"
            android:background="@drawable/tab_menu_pic" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/tab_bar_style"
            android:background="@drawable/tab_menu_text" />

        
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_below="@id/rg_tab_bar"
        android:background="#f6f5f5"
        android:visibility="visible" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/iv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dip"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>