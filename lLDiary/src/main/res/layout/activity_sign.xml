<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sign"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sign"
    android:alpha="127"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/welcome_sign"
        android:textColor="@color/primary_text_color_trans"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:textColor="#ff000000"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/btn_exchange_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/primaryColor_accent_transparent"
        android:textColor="#ffffffff"
        android:layout_above="@+id/frame_sign"
        android:layout_alignEnd="@+id/textView" />

    <FrameLayout
        android:id="@+id/frame_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tv_title"
        />


</RelativeLayout>