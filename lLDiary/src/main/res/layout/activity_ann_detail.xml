<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_ann_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ann_circle_bg_small"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/iv_ann_dash"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/tv_ann_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dash_line_vertical" />

    <ImageView
        android:id="@+id/iv_ann_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tv_ann_name"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@id/iv_ann_dash" />


    <TextView
        android:id="@+id/tv_ann_big"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@id/iv_ann_dash"
        android:layout_centerInParent="true"
        android:background="@drawable/ann_circle_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>