<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        />

    <!--<EditText-->
        <!--android:id="@+id/et"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_margin="5dp"-->
        <!--android:layout_marginEnd="3dp"-->
        <!--android:layout_marginRight="3dp"-->
        <!--android:layout_toEndOf="@id/tv"-->
        <!--android:layout_toRightOf="@id/tv"-->
        <!--android:gravity="center_vertical"-->
        <!--android:backgroundTint="@color/primaryColor"-->
        <!--android:padding="8dp"-->
        <!--android:textColorHint="@color/main_light_gray"-->
        <!--android:visibility="visible"-->
        <!--/>-->

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:met_primaryColor="@color/primaryColorDark"
        app:met_baseColor="@color/primaryColor"
        app:met_underlineColor="@color/primaryColor"
        app:met_clearButton="true"
        android:layout_toEndOf="@id/tv"
        android:layout_toRightOf="@id/tv"
        android:focusableInTouchMode="true"
        />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/tv"
        android:layout_toRightOf="@id/tv"
        android:background="@android:drawable/edit_text"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

        <ImageButton
            android:id="@+id/ib"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_money_select"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_toLeftOf="@id/ib"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

</RelativeLayout>